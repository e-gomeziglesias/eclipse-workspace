Realizar un programa en donde se puedan utilizar los prototipos de la función
Sumar en sus 4 combinaciones.
int Sumar1(int, int);
int Sumar2(void);
void  Sumar3(int, int);
void Sumar4(void);

 ============================================================================
 */

#include <stdio.h>
#include <stdlib.h>

//declaracion de prototipos

int IngresoEntero (char mensaje[]);
int Sumar1(int num1, int num2);
int Sumar2(void);
void Sumar3(int num1, int num2);
void Sumar4(void);

int main(void) {
	setbuf(stdout, NULL);
	int num1;
	int num2;
	int suma;

	printf("\nSumar1\n");
	num1=IngresoEntero("Ingrese el primer numero: ");
	num2=IngresoEntero("Ingrese el segundo numero: ");

	suma = Sumar1(num1, num2);

	printf("El resultado de Sumar1 es %d\n", suma);

	printf("\nSumar2\n");
	suma = Sumar2();
	printf("El resultado de Sumar2 es %d\n", suma);

	printf("\nSumar3\n");
	num1=IngresoEntero("Ingrese el primer numero: ");
	num2=IngresoEntero("Ingrese el segundo numero: ");

	Sumar3(num1, num2);

	printf("\nSumar4\n");
	Sumar4();





	return EXIT_SUCCESS;
}

int Sumar1(int num1, int num2)
{
	int suma;

	suma = num1 + num2;

	return suma;
}
int Sumar2(void)
{
	int suma;
	int num1;
	int num2;

	printf("\nIngrese un numero: ");
	scanf("%d", &num1);
	printf("\nIngrese otro numero: ");
	scanf("%d", &num2);

	suma = num1 + num2;

	return suma;
}
void Sumar3(int num1, int num2)
{
	int suma;

	suma = num1 + num2;

	printf("\nEl resultado de Sumar3 es: %d", suma);
}
void Sumar4(void)
{
	int num1;
	int num2;
	int suma;

	printf("\nIngrese un numero: ");
	scanf("%d", &num1);
	printf("\nIngrese otro numero: ");
	scanf("%d", &num2);

	suma = num1 + num2;

	printf("\nEl resultado de la suma es: %d", suma);
}

int IngresoEntero (char mensaje[])
{
	int entero;

	printf("\n%s", mensaje);
	scanf("%d", &entero);

	return entero;
}
